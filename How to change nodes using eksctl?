eksctl create nodegroup \
  --cluster <cluster-name> \
  --region <region> \
  --name private-ng \
  --node-type t3.medium \
  --nodes 2 \
  --nodes-min 2 \
  --nodes-max 4 \
  --node-private-networking \
  --subnet-ids <private-subnet-id-1>,<private-subnet-id-2>

